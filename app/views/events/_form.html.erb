<%= form_with model: @event do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @event.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
    <% @event.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

   <div>
    <%= form.label :location %><br>
    <%= form.text_area :location %><br>
    <% @event.errors.full_messages_for(:location).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div> 
   
     <div>
    <%= form.label :time %><br>
    <%= form.datetime_select :time %><br>
    <% @event.errors.full_messages_for(:time).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div> 
  
  <div>
    <%= form.submit %>
  </div>
<% end %>