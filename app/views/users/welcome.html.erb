<h2>My Events</h2>
<div class="d-flex gap-4">
  <% @user.created_events.each do |event| %>
    <%= render 'shared/event_card', event: event %>
  <% end %>
</div>
<h2>Upcoming Events</h2>
<div class="d-flex gap-4">
  <% @user.attended_events.each do |event| %>
    <%= render 'shared/event_card', event: event %>
  <% end %>
</div>
